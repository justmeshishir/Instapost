<% @posts.each do |post| %>
    <%= image_tag post.user.photo %>
    <%= post.user.name %><br />
    <%= image_tag post.photo %><br />
    <%= post.description %><br />
    <%= link_to 'View Post', post_path(post.id) %>
    <% if post.user == current_user %>
        <%= link_to 'Edit Post', edit_post_path(post.id) %>
        <%= link_to 'Delete Post', post_path(post.id), method: :delete %><br /><br />
    <% end %>
    <% if user_signed_in? %>
        <% post.comments.each do |comment| %>
            <p><% User.find(comment.user_id).name %><%= comment.user.name %>
            <%= comment.text %></p>
            <% if comment.user == current_user %>
                <%= link_to 'Delete Comment', post_comment_path(post_id: post.id, id: comment.id), method: :delete %>
            <% end %>
        <% end %>
        <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
            <%= f.input :text, label: 'Comment'%>
            <%= f.submit 'Post',  class: 'btn btn-primary btn-block', placeholder: 'Add a comment...'%>
        <% end %>    
    <% end %>
<% end %>