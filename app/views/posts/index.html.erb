<% @posts.each do |post| %>
    <%= image_tag post.user.photo %>
    <%= post.user.name %><br />
    <%= image_tag post.photo %><br />
    <%= post.description %><br />
    <%= link_to 'View Post', post_path(post.id) %>
    <% if post.user == current_user %>
        <%= link_to 'Edit Post', edit_post_path(post.id) %>
        <%= link_to 'Delete Post', post_path(post.id), method: :delete %><br /><br />
    <% end %>
<% end %>